\ProvidesPackage{glossary}

\makeglossaries

\newglossaryentry{hh}{
  name=Hedgehog,
  description={
    C++ library that uses data-flow graphs to run multithreaded code.
  }
}

\newglossaryentry{hmbe}{
  name=HMBE,
  description={
    (HTGS Model-based engine), C++ library that uses data-flow graphs to run
    multithreaded code. It is the ancestor of Hedgehog.
  },
  first={HMBE (HTGS Model-based engine)}
}

\newglossaryentry{htgs}{
  name=HTGS,
  description={
    (Hybrid Task Graphs Scheduler), abstract execution model used to schedule
    multithreaded task.
  },
  first={HTGS (Hybrid Task Graphs Scheduler)}
}

\newglossaryentry{fds}{
  name=FDS,
  description={
    Fire simulation.
  },
  first={FDS (Fire Dynamic Simulator)}
}

\newglossaryentry{hpc}{
  name=HPC,
  description={
    High Performance Computing.
  },
  first={HPC (High Performance Computing)}
}

\newglossaryentry{cstruct}{
  name=C-Struct,
  description={
    class composed by only fundamental public members. It can holds pointers and
    static arrays but those should be at the end of the struct.
  }
}

\newglossaryentry{sfinae}{
  name=SFINAE,
  description={
    (Substitution Failure Is Not An Error), behavior of the compiler that does
    not generate an error when a template substitution fail.
  },
  first={SFINAE (Substitution Failure Is Not An Error)}
}

\newglossaryentry{ast}{
  name=AST,
  description={
    (Abstract Syntax Tree) tree structure that represents a program.
  },
  first={AST (Abstract Syntax Tree)}
}

\newglossaryentry{parser}{
  name=parser,
  description={
    the role of a parser is to analyse a string of symbols, conforming to the
    rules of a grammar.
  }
}
